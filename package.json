{
  "name": "@faable/faable",
  "version": "0.0.0-dev",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "Marc Pomar <marc@faable.com>",
  "type": "module",
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/faablecloud/faable/issues"
  },
  "bin": {
    "faable": "bin/faable.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/faablecloud/faable#readme",
  "dependencies": {
    "axios": "^1.2.3",
    "express": "^4.18.2",
    "fs-extra": "^11.1.0",
    "handlebars": "^4.7.7",
    "pino": "^8.11.0",
    "pino-pretty": "^9.4.0",
    "promisify-child-process": "^4.1.1",
    "prompts": "^2.4.2",
    "ramda": "^0.29.0",
    "tslib": "^2.4.1",
    "yaml": "^2.2.2",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/bluebird": "^3.5.38",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.17",
    "@types/ramda": "^0.29.1",
    "@types/yargs": "^17.0.17",
    "ava": "^5.2.0",
    "husky": "^9.1.7",
    "rimraf": "^3.0.2",
    "rollup": "^3.7.5",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "semantic-release": "^19.0.5",
    "ts-node": "^10.9.1",
    "type-fest": "^3.5.3",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "start": "yarn run cli",
    "cli": "ts-node --esm --experimental-specifier-resolution=node src/index.ts",
    "build": "rimraf pkg && rollup --config rollup.config.mjs",
    "release": "yarn build && semantic-release",
    "test": "ava"
  },
  "release": {
    "branches": "main",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "pkg"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
